<!doctype html>
<html lang="fr">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>{% block title %}ExpoActes{% endblock %}</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@tabler/icons-webfont@latest/tabler-icons.min.css" />
    {% block stylesheets %}
        {{ ux_controller_link_tags() }}
    {% endblock %}

    {% block javascripts %}
        {% block importmap %}{{ importmap('app') }}{% endblock %}
    {% endblock %}
</head>
<body class="d-flex flex-column h-1020" style="height: 100vh;">
{% block header %}
    <header class="p-3 mb-3 border-bottom d-print-none">
        <div class="container">
            <div class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start">
                <a href="/" class="d-flex align-items-center mb-3 mb-lg-0 me-lg-auto text-dark text-decoration-none">
                    <i class="ti ti-grave icon-rose"></i> <span class="fs-4">ExpoActes</span>
                </a>

                <ul class="nav col-12 col-lg-auto me-lg-auto mb-2 justify-content-center mb-md-0" id="topmenu">
                    {% block menu %}
                        {% include '@ExpoActe/_menu.html.twig' %}
                    {% endblock %}
                </ul>

                {{ render(url('expoacte_search_form')) }}

                {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
                    <div class="dropdown text-end">
                        <a href="#" class="d-block link-dark text-decoration-none dropdown-toggle" id="dropdownUser1"
                           data-bs-toggle="dropdown" aria-expanded="false">
                            <img src="https://github.com/mdo.png" alt="mdo" width="32" height="32"
                                 class="rounded-circle">
                            {{ app.user }}
                        </a>
                        <ul class="dropdown-menu text-small" aria-labelledby="dropdownUser1" style="">
                            <li><a class="dropdown-item" href="#">New project...</a></li>
                            <li><a class="dropdown-item" href="#">Settings</a></li>
                            <li><a class="dropdown-item" href="#">Profile</a></li>
                            <li>
                                <hr class="dropdown-divider">
                            </li>
                            <li><a class="dropdown-item" href="{{ path('app_logout') }}">Me d√©connecter</a></li>
                        </ul>
                    </div>
                {% else %}
                    <a type="button" class="btn btn-outline-primary me-2" href="{{ path('app_login') }}">Me
                        connecter</a>
                {% endif %}

            </div>
        </div>
    </header>
{% endblock %}
<!-- Begin page content -->
<main class="flex-shrink-0">
    <div class="container pt-3">
        {% include '@ExpoActe/_flash_messages.html.twig' %}

        {% block notifications %}

        {% endblock %}

        {% block body %}

        {% endblock %}
    </div>
</main>

{% block footer %}
    <footer class="footer mt-auto py-3 bg-body-tertiary d-print-none">
        <div class="container d-flex" style="align-items: center; justify-content: center;">
            <a href="https://expoactes.monrezo.be/" target="_blank">ExpoActes</a>
        </div>
    </footer>
{% endblock %}

{% block scripts %}{% endblock %}

</body>
</html>
