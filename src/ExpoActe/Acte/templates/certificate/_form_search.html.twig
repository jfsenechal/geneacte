{{ form_start(form, { 'attr': {'class': 'form-inline mb-3'}}) }}
{{ form_errors(form) }}
<div class="row">
    <div class="col">
        {{ form_row(form.name, {label_attr: {class: 'sr-only'}, attr:{'class': ' my-1 mr-sm-2'} }) }}
    </div>
    <div class="col">
        {{ form_row(form.type, {label_attr: {class: 'sr-only'}, attr:{'class': ' my-1 mr-sm-2'} }) }}
    </div>
</div>

<button class="btn btn-primary mr-1" type="submit" name="send">
    <i class="ti ti-search" aria-hidden="true"></i>
    Rechercher
</button>
{{ form_end(form) }}
